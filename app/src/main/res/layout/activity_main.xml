<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- TextView displaying the title above the image -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STATIC IMAGE VIEWER APPLICATION"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/mainimg"
        android:textStyle="bold"
        android:textSize="20sp"
        android:paddingBottom="10dp"
        android:layout_marginTop="20dp" />

    <!-- Main ImageView below the title -->
    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/mainimg"
        android:layout_margin="15dp"
        android:scaleType="fitXY"
        />

    <!-- Left ImageButton -->
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="3dp"
        android:layout_toLeftOf="@+id/mainimg"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@drawable/lefticon"
        android:id="@+id/ib1"
        />

    <!-- Right ImageButton -->
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/mainimg"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@drawable/righticonn"
        android:id="@+id/ib2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Devloped by Sahil"
        android:id="@+id/devloptext"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:layout_below="@+id/mainimg"
        android:textStyle="italic"
        />
</RelativeLayout>
